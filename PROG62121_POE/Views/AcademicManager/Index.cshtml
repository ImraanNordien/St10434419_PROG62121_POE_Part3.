@model List<PROG62121_POE.Models.Claim>
@{
    ViewData["Title"] = "Academic Manager - Pending Claims";
}

<div class="container page-container">
    <h2>Pending Claims</h2>

    @if (Model.Count == 0)
    {
        <p>No pending claims.</p>
    }
    else
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>File</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.Notes</td>
                        <td>
                            <a href="~/uploads/@claim.FileName" target="_blank">@claim.FileName</a>
                        </td>
                        <td>@claim.Status</td>
                        <td>
                            <form asp-action="Approve" method="post" style="display:inline;">
                                <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-action="Reject" method="post" style="display:inline;">
                                <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

