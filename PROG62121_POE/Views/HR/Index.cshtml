@{
    ViewData["Title"] = "HR";
}

<div class="page-container">
    <h2>Manage Lecturer Information</h2>

    <form>
        <!-- Lecturer Name -->
        <div class="mb-3">
            <label for="lecturerName" class="form-label">Lecturer Name</label>
            <input type="text" class="form-control" id="lecturerName" placeholder="Enter name">
        </div>

        <!-- Contact Email -->
        <div class="mb-3">
            <label for="lecturerEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="lecturerEmail" placeholder="Enter email">
        </div>

        <!-- Hourly Rate -->
        <div class="mb-3">
            <label for="hourlyRate" class="form-label">Hourly Rate</label>
            <input type="number" class="form-control" id="hourlyRate" placeholder="Set hourly rate">
        </div>

        <!--Submit -->
        <button type="submit" class="btn btn-primary">Save Lecturer</button>
    </form>
</div>
