@model IEnumerable<PROG62121_POE.Models.User>
@{
    ViewData["Title"] = "HR Dashboard";
}

<h2>HR Dashboard - Manage Users</h2>
<a href="/HR/AddUser" class="btn btn-primary">Add New User</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Hourly Rate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@($"{u.FirstName} {u.LastName}")</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>@(u.Role == "Lecturer" ? u.HourlyRate.ToString("C") : "-")</td>
                <td>
                    <a href="/HR/EditUser/@u.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
