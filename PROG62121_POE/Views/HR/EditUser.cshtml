@model PROG62121_POE.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required type="email" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" class="form-control" required type="password" />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select asp-for="Role" class="form-control" required>
            <option value="Lecturer">Lecturer</option>
            <option value="ProgrammeCoordinator">Programme Coordinator</option>
            <option value="AcademicManager">Academic Manager</option>
            <option value="HR">HR</option>
        </select>
    </div>

    <div class="form-group">
        <label>Hourly Rate (Only for Lecturers)</label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
